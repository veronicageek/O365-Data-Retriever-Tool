						<DataGrid.Resources>
							<Style BasedOn="{StaticResource MetroDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
								<Setter Property ="FontWeight" Value="Bold"/>
							</Style>
						</DataGrid.Resources>
						<DataGrid.Columns>
							<DataGridTextColumn Width="auto" Header="Name" Binding="{Binding DisplayName}">
